<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_instance_auto_backup_daily" model="ir.cron">
            <field name="name">Backup : Daily Odoo Instance Backup</field>
            <field name="model_id" ref="model_odoo_instance_backup"/>
            <field name="state">code</field>
            <field name="code">model.cron_auto_backup('daily')</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
        </record>
        <record id="ir_cron_instance_auto_backup_weekly" model="ir.cron">
            <field name="name">Backup : Weekly Odoo Instance Backup</field>
            <field name="model_id" ref="model_odoo_instance_backup"/>
            <field name="state">code</field>
            <field name="code">model.cron_auto_backup('weekly')</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
        </record>
        <record id="ir_cron_instance_auto_backup_monthly" model="ir.cron">
            <field name="name">Backup : Monthly Odoo Instance Backup</field>
            <field name="model_id" ref="model_odoo_instance_backup"/>
            <field name="state">code</field>
            <field name="code">model.cron_auto_backup('monthly')</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
        </record>
        
        <!-- Subscription Expiry Check Cron -->
        <record id="ir_cron_check_expired_subscriptions" model="ir.cron">
            <field name="name">Check Expired Subscriptions</field>
            <field name="model_id" ref="model_launchly_subscription"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_expired_subscriptions()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo> 