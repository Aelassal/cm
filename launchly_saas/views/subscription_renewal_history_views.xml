<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Subscription Renewal History Tree View -->
        <record id="view_subscription_renewal_history_tree" model="ir.ui.view">
            <field name="name">subscription.renewal.history.tree</field>
            <field name="model">subscription.renewal.history</field>
            <field name="arch" type="xml">
                <list string="Subscription Renewal History">
                    <field name="name"/>
                    <field name="subscription_id"/>
                    <field name="partner_id"/>
                    <field name="renewal_date"/>
                    <field name="previous_start_date"/>
                    <field name="previous_end_date"/>
                    <field name="new_start_date"/>
                    <field name="new_end_date"/>
                </list>
            </field>
        </record>

        <!-- Subscription Renewal History Form View -->
        <record id="view_subscription_renewal_history_form" model="ir.ui.view">
            <field name="name">subscription.renewal.history.form</field>
            <field name="model">subscription.renewal.history</field>
            <field name="arch" type="xml">
                <form string="Subscription Renewal History">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="subscription_id"/>
                                <field name="partner_id"/>

                            </group>
                            <group>
                                <field name="renewal_date"/>

                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="previous_start_date"/>
                                <field name="previous_end_date"/>
                            </group>
                            <group>
                                <field name="new_start_date"/>
                                <field name="new_end_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Subscription Renewal History Search View -->
        <record id="view_subscription_renewal_history_search" model="ir.ui.view">
            <field name="name">subscription.renewal.history.search</field>
            <field name="model">subscription.renewal.history</field>
            <field name="arch" type="xml">
                <search string="Subscription Renewal History">
                    <field name="name"/>
                    <field name="subscription_id"/>
                    <field name="partner_id"/>


                    <filter string="This Month" name="this_month" domain="[('renewal_date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')), ('renewal_date', '&lt;=', (context_today() + relativedelta(months=1, day=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                    <filter string="Last Month" name="last_month" domain="[('renewal_date', '&gt;=', (context_today() + relativedelta(months=-1, day=1)).strftime('%Y-%m-%d')), ('renewal_date', '&lt;=', (context_today() + relativedelta(day=1, days=-1)).strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Partner" name="group_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Subscription" name="group_subscription" context="{'group_by': 'subscription_id'}"/>
                        <filter string="Renewal Date" name="group_renewal_date" context="{'group_by': 'renewal_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Subscription Renewal History Action -->
        <record id="action_subscription_renewal_history" model="ir.actions.act_window">
            <field name="name">Subscription Renewal History</field>
            <field name="res_model">subscription.renewal.history</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_this_month': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No subscription renewal history found
                </p>
                <p>
                    This will show the history of all subscription renewals.
                </p>
            </field>
        </record>

        <!-- Menu Item for Subscription Renewal History -->
        <menuitem id="menu_subscription_renewal_history"
                  name="Renewal History"
                  parent="launchly_saas.menu_config_root"
                  action="action_subscription_renewal_history"
                  sequence="20"/>
    </data>
</odoo> 