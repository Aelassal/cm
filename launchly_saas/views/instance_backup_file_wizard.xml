<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_instance_backup_file_line_list" model="ir.ui.view">
        <field name="name">instance.backup.file.line.list</field>
        <field name="model">instance.backup.file.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="Filename"/>
                <field name="size" string="Size (bytes)"/>
                <field name="date" string="Date Modified"/>
                <field name="download_html" string="Download" widget="html"/>
            </list>
        </field>
    </record>

    <record id="view_instance_backup_file_wizard_form" model="ir.ui.view">
        <field name="name">instance.backup.file.wizard.form</field>
        <field name="model">instance.backup.file.wizard</field>
        <field name="arch" type="xml">
            <form string="Backup Files">
                <group>
                    <field name="backup_id" readonly="1"/>
                </group>
                <field name="file_ids" nolabel="1"/>
            </form>
        </field>
    </record>
</odoo> 