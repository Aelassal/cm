<odoo>
    <record id="view_saas_config_list" model="ir.ui.view">
        <field name="name">saas.config.list</field>
        <field name="model">saas.config</field>
        <field name="arch" type="xml">
            <list>
                <field name="sudo_password"/>
                <field name="http_ip"/>
                <field name="backup_path"/>
                <field name="instance_id"/>
                <field name="domain"/>
                <field name="script_path"/>
            </list>
        </field>
    </record>

    <record id="view_saas_config_form" model="ir.ui.view">
        <field name="name">saas.config.form</field>
        <field name="model">saas.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="sudo_password" required="1"/>
                        <field name="http_ip"/>
                        <field name="backup_path" required="1"/>
                        <field name="instance_id"/>
                        <field name="domain"/>
                        <field name="script_path"/>
                        <field name="ssl_email" required="domain != False" invisible="domain == False"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
